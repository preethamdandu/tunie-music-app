# =============================================================================
# TuneGenie Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials

# =============================================================================
# Spotify API Credentials (REQUIRED)
# =============================================================================
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8501/callback

# =============================================================================
# AI Provider API Keys (At least ONE required for AI features)
# =============================================================================
# All providers below have FREE tiers - choose any combination!
# Priority order: Groq > Gemini > OpenRouter > DeepSeek > HuggingFace

# Groq API (RECOMMENDED - Fastest, FREE)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API (FREE - 1M token context)
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here

# OpenRouter API (FREE models available)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# DeepSeek API (FREE trial - 5M tokens)
# Get your key at: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# HuggingFace Token (FREE but limited - $0.10/month)
# Get your token at: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# OpenAI API (DISABLED by default - costs money!)
# Only enable if you explicitly want to pay for API calls
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=True
LOG_LEVEL=INFO

# =============================================================================
# Model Settings
# =============================================================================
COLLABORATIVE_FILTERING_ALGORITHM=SVD
RECOMMENDATION_COUNT=20
LLM_TEMPERATURE=0.7

# =============================================================================
# Feature Flags
# =============================================================================
# Enable the LLM-driven recommendation strategy (cf_first when False)
FEATURE_FLAG_LLM_DRIVEN=False

# =============================================================================
# Security & Telemetry (optional)
# =============================================================================
# Enable license enforcement to block unauthorized use
TUNIE_ENFORCE_LICENSE=False
# License key for this deployment (validated remotely when enforcement is on)
TUNIE_LICENSE_KEY=
# Your license validation endpoint that returns {"valid": true|false, "message": "..."}
TUNIE_LICENSE_CHECK_URL=

# Anonymous, privacy-safe telemetry (best-effort; set OPTOUT to disable)
TUNIE_TELEMETRY_URL=
TUNIE_TELEMETRY_OPTOUT=False

# Application identity (shown in telemetry payloads)
TUNIE_APP_NAME=TuneGenie
TUNIE_APP_VERSION=1.0.0
