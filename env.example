# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8501/callback

# OpenAI API Credentials
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Model Settings
COLLABORATIVE_FILTERING_ALGORITHM=SVD
RECOMMENDATION_COUNT=20
LLM_TEMPERATURE=0.7

# Feature Flags
# Enable the LLM-driven recommendation strategy (cf_first when False)
FEATURE_FLAG_LLM_DRIVEN=False

# Security & Telemetry (optional)
# Enable license enforcement to block unauthorized use
TUNIE_ENFORCE_LICENSE=False
# License key for this deployment (validated remotely when enforcement is on)
TUNIE_LICENSE_KEY=
# Your license validation endpoint that returns {"valid": true|false, "message": "..."}
TUNIE_LICENSE_CHECK_URL=

# Anonymous, privacy-safe telemetry (best-effort; set OPTOUT to disable)
TUNIE_TELEMETRY_URL=
TUNIE_TELEMETRY_OPTOUT=False

# Application identity (shown in telemetry payloads)
TUNIE_APP_NAME=TuneGenie
TUNIE_APP_VERSION=0.0.0
